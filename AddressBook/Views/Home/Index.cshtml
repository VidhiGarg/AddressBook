@{
    ViewBag.Title = "Contacts";
}

<h2>Contacts</h2>
<div ng-app="clientapp" class="container">
    <br />
    <br />
    
    <br />
    <div ng-controller="ContactsController">     
        <div class="col-md-6">
            <input type="text" placeholder="Search" ng-model="searchStudent" />
            <table class="table">
                <tr style="cursor: pointer;" ng-repeat="r in contacts| filter : searchStudent">
                    
                    <td>
                        <div ng-click="contactClicked(r.Id)" data-toggle="collapse" data-target="#addresses{{r.Id}}">{{r.Title}} {{r.FirstName}} {{r.LastName}}</div>
                        <div class="collapse" id="addresses{{r.Id}}">
                            <table class="table">
                                <tr ng-repeat="a in addresses">
                                    @*| filter : searchStudent*@
                                    <td>{{a.Line1}} {{a.City}} {{a.PostCode}}</td>
                                </tr>
                            </table>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        
    </div>
</div>

